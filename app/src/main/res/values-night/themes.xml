<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TripMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondary</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondary</item>

        <!-- Background & Surface Colors -->
        <item name="android:colorBackground">@color/background_gradient</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/card_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Navigation Colors -->
        <item name="colorSurfaceContainer">@color/card_background</item>
        <item name="colorOutline">@color/text_secondary</item>

        <!-- Status Bar (dark mode specific) -->
        <item name="android:statusBarColor">@color/background_gradient</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/card_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Theme.TripMate" parent="Base.Theme.TripMate" />

    <!-- Custom Bottom Navigation Indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorPrimary</item>
    </style>
</resources>